 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="displayName" class="text-light">Display name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="displayName" value="" placeholder="Enter your name">
        </div>
        <div class="form-group">
            <label for="username" class="text-light">Username</label>
            <input type="text" name="username" value="" placeholder="User account">
        </div>
        <div class="form-group">
            <label for="password" class="text-light">Password</label>
            <input type="text" name="password" value="" placeholder="Password">
        </div>
        <div class="form-group">
            <label for="confirmPassword" class="text-light">Confirm password</label>
            <input type="text" name="confirmPassword" value="" placeholder="Confirm password">
        </div>
        <div class="form-group">
            <label for="isManagers" class="text-light">isManagers</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="isManagers" value="Managers" >
                <label for="radio-2" class="radio-label">Managers</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="isManagers" value="User" >
                <label for="radio-3" class="radio-label">User</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>